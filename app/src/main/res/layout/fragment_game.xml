<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:keep="@layout/fragment_game"
>
    <data>
        <variable name="viewModel" type="io.schiar.giovani.motetris.GameViewModel"/>
    </data>
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:padding="15dp"
    >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
        >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/viewport_shape"
                android:layout_centerInParent="true"
                app:draw_bit_sets="@{viewModel.bitSets}"
                app:setup_resolution_width="@{viewModel.resolutionWidth}"
                app:setup_resolution_height="@{viewModel.resolutionHeight}"
            />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/viewport_shape"
                android:layout_alignParentEnd="true"
            >
                <RelativeLayout
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:gravity="center"
                    app:draw_bit_sets="@{viewModel.nextContent}"
                >
                </RelativeLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentStart="true"
                tools:ignore="RelativeOverlap"
            >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/score"
                    app:score="@{viewModel.score}"
                />
            </LinearLayout>

        </RelativeLayout>

        <FrameLayout
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
        >
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:src="@drawable/ic_baseline_keyboard_arrow_up_24px"
                android:scaleX="5"
                android:scaleY="5"
                android:layout_gravity="top|center_horizontal"
                android:layout_marginTop="25dp"
                android:contentDescription="@string/up"
                android:onClick="@{() -> viewModel.upClicked()}"
            />
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:src="@drawable/ic_baseline_keyboard_arrow_right_24px"
                android:scaleX="5"
                android:scaleY="5"
                android:layout_gravity="end|center_vertical"
                android:layout_marginEnd="50dp"
                android:contentDescription="@string/right"
                android:onClick="@{() -> viewModel.rightClicked()}"
            />
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:src="@drawable/ic_baseline_keyboard_arrow_left_24px"
                android:scaleX="5"
                android:scaleY="5"
                android:layout_gravity="start|center_vertical"
                android:layout_marginStart="50dp"
                android:contentDescription="@string/left"
                android:onClick="@{() -> viewModel.leftClicked()}"
            />
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:src="@drawable/ic_baseline_keyboard_arrow_down_24px"
                android:scaleX="5"
                android:scaleY="5"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginBottom="25dp"
                android:contentDescription="@string/down"
                android:onClick="@{() -> viewModel.downClicked()}"
            />
        </FrameLayout>
    </LinearLayout>
</layout>